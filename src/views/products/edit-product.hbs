<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Producto</h3>
        </div>
        <div class="card-body">
            <form action="/products/edit-product-done/{{product._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Nombre" value="{{product.name}}">
                </div>
                <div class="form-group">
                    <input type="text" name="price" class="form-control" placeholder="Precio" value="{{product.price}}">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control">{{product.description}}</textarea>
                </div>
                <div class="form-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="img-uploader"
                            aria-describedby="inputGroupFileAddon03" name="imgFile">
                        <label class="custom-file-label" for="img-uploader">Elegir Archivo</label>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>