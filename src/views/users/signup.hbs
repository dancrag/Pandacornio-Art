<div class="card">
    <div class="card-header">Registro de Cuenta</div>
    <div class="card-body">
        <form action="/users/signup" method="POST" class="needs-validation" novalidate>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="first_name">Nombre(s)</label>
                    <input type="text" class="form-control" name="first_name" id="first_name" placeholder="Nombre" value="{{name}}" required>
                    <div class="valid-feedback">
                        ¡Se ve bien!
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="las_name">Apellidos</label>
                    <input type="text" class="form-control" name="last_name" id="last_name">
                </div>
                <div class="form-group col-md-12">
                    <label for="email">Correo Electrónico</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="E-mail" value="{{email}}">
                </div>
                <div class="form-group col-md-6">
                    <label for="pass">Contraseña</label>
                    <input type="password" class="form-control" name="password" id="pass" placeholder="Contraseña"
                        value="{{password}}">
                </div>
                <div class="form-group col-md-6">
                    <label for="passconfirm">Confirmar Contraseña</label>
                    <input type="password" class="form-control" name="confirm_password"
                        placeholder="Confirmar Contraseña" value="{{confirm_password}}">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="street">Calle</label>
                    <input type="text" class="form-control" name="street" id="street" placeholder="Prol. Nogal">
                </div>
                <div class="form-group col-md-3">
                    <label for="number_ext">Número Exterior</label>
                    <input type="text" class="form-control" name="number_ext" id="number_ext" placeholder="12">
                </div>
                <div class="form-group col-md-3">
                    <label for="suburb">Colonia</label>
                    <input type="text" class="form-control" name="suburb" id="suburb" placeholder="Potrerillo">
                </div>
                <div class="form-group col-md-3">
                    <label for="zip_code">Código Postal</label>
                    <input type="text" class="form-control" name="zip_code" id="zip_code" placeholder="10620">
                </div>
                <div class="form-group col-md-6">
                    <label for="city">Alcaldía o Municipio</label>
                    <input type="text" class="form-control" name="city" id="city" placeholder="La Magdalena Contreras">
                </div>
                <div class="form-group col-md-6">
                    <label for="state">Estado</label>
                    <input type="text" class="form-control" name="state" id="state" placeholder="Ciudad de México">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Registrarse</button>
        </form>
    </div>
</div>