{{#if user}}
<div class="card">
    <div class="card-body">
        <h3 class="card-title">Datos del Usuario</h3>
        <div class="row">
            <div class="col-3">
                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab"
                        aria-controls="v-pills-home" aria-selected="true"><i class="fas fa-user"></i> Perfil</a>
                    <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab"
                        aria-controls="v-pills-profile" aria-selected="false"><i class="fas fa-shipping-fast"></i>
                        Dirección de Entrega</a>
                    <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab"
                        aria-controls="v-pills-messages" aria-selected="false"><i class="fas fa-credit-card"></i> Datos
                        de Facturación</a>
                </div>
            </div>
            <div class="col-9">
                <div class="tab-content" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel"
                        aria-labelledby="v-pills-home-tab">
                        <div class="row">
                            <div class="col-3">
                                <img src="img/logo.png" class="card-img" alt="...">
                            </div>
                            <div class="col-9">
                                <form action="">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Nombre(s)</label>
                                        <input type="text" class="form-control" id="exampleInputEmail1"
                                            aria-describedby="emailHelp" value="{{user.first_name}}" autofocus>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Apellidos</label>
                                        <input type="text" class="form-control" id="exampleInputPassword1"
                                            value="{{user.last_name}}">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Correo
                                            Electrónico</label>
                                        <input type="email" class="form-control" id="exampleInputPassword1"
                                            value="{{user.email}}">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="v-pills-profile" role="tabpanel"
                        aria-labelledby="v-pills-profile-tab">
                        <form action="">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="street">Calle</label>
                                    <input type="text" class="form-control" name="street" id="street"
                                        value="{{user.street}}">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="number_ext">Num. Exterior</label>
                                    <input type="text" class="form-control" name="number_ext" id="number_ext"
                                        value="{{user.number_ext}}">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="suburb">Colonia</label>
                                    <input type="text" class="form-control" name="suburb" id="suburb"
                                        value="{{user.suburb}}">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="zip_code">Código Postal</label>
                                    <input type="text" class="form-control" name="zip_code" id="zip_code"
                                        value="{{user.zip_code}}">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="city">Alcaldía o Municipio</label>
                                    <input type="text" class="form-control" name="city" id="city" value="{{user.city}}">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="state">Estado</label>
                                    <input type="text" class="form-control" name="state" id="state"
                                        value="{{user.state}}">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                        </form>
                    </div>
                    <div class="tab-pane fade" id="v-pills-messages" role="tabpanel"
                        aria-labelledby="v-pills-messages-tab">
                        <form action="">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="num-card">Número de Tarjeta</label>
                                    <input type="text" name="num_card" id="num_card" class="form-control"
                                        placeholder="XXXX-XXXX-XXXX-XXXX">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="name_card">Nombre en la Tarjeta</label>
                                    <input type="text" name="name_card" id="name_card" class="form-control"
                                        placeholder="Ej. Juan Pérez Castillo">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="exp_month">Mes de Expiración</label>
                                    <input type="number" name="exp_month" id="exp_month" class="form-control" min="1"
                                        max="12" placeholder="10">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="exp_yeae">Año de Expiración</label>
                                    <input type="number" name="exp_year" id="exp_year" class="form-control" min="0"
                                        max="99" placeholder="21">
                                </div>
                                <div class="form-group col-md-2">
                                    <label for="cvv">CVV</label>
                                    <input type="password" name="cvv" id="cvv" class="form-control">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{else}}

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Redes Sociales</h5>
                <p>Visitanos en:</p>
                <div class="media">
                    <img src="img/fb-logo.png" class="mr-3" alt="..." style="max-width: 32px;">
                    <div class="media-body">
                        <a href="https://www.facebook.com/pandacornio.art" target="blank"><p>/pandacornio.art</p></a> 
                    </div>
                </div>
                <div class="media">
                    <img src="img/insta-logo.png" class="mr-3" alt="..." style="max-width: 32px;">
                    <div class="media-body">
                        <a href="https://www.instagram.com/pandacornio.art/?hl=es-la" target="blank"><p>@pandacornio.art</p></a> 
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                {{#each products}}
                <div class="carousel-item {{#if @first}}active{{/if}}" data-interval="2000">
                    <img src="img/{{imgFile}}" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>{{name}}</h5>
                        <p>{{description}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
            <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>



{{/if}}